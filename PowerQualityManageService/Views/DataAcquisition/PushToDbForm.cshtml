@{
}
<div id="overlay"></div>

<div id="pushToDbForm" class="popup-form">
    <h2>Zapisz do bazy</h2>
    <div class="p-4 bg-secondary">
        <form method="post" asp-area="" asp-controller="DataAcquisition" asp-action="Save">
            <div class="row">
                <div class="col-md-3"> </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <select id="points1"
                                   onchange="if(this.options[this.selectedIndex].value=='customOption'){toggleField(this,'points2');this.selectedIndex='0';}" 
                                   asp-items="@ViewBag.MeasuringPoints" class="form-control">
                                  <option value = null>Wprowadź punkt pomiarowy</option>
                                  <option value="customOption">[Wprowadź nowy punkt pomiarowy]</option>
                        </select>
                        <input id="points2" class="form-control" style="display:none;" onblur="if(this.value==''){toggleField(this,'points1');}" placeholder="Punkt pomiarowy">
                        @*<input type="text" class="form-control form-control-alternative" id="measuringPointControlInput" name="measuringPoint" placeholder="Nazwa punktu pomiarowego">*@
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"> </div>

                <div class="col-md-6">
                    <div id="alerts"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <button id="pushToDbButton" class="btn btn-primary bg-gradient-primary btn-lg w-100" type="button">Zapisz do bazy</button>
                </div>
                <div class="col-md-3">
                    <button id="closePushToDbFormButton" class="btn btn-outline-primary btn-lg w-100" type="button">Anuluj</button>
                </div>
            </div>
        </form>
    </div>

</div>



